    <script src="/js/i18n.js"></script>
    <script src="/js/layout.js"></script>
    <script>
        function downloadApp() {
            window.location.href = '/api/download-app';
        }

        // 구독 정지 함수
        function cancelSubscription() {
            if (confirm('구독을 정지하시겠습니까?\n\n다음 결제 예정일 전날까지 UNIVERSE 플랜을 계속 이용할 수 있으며, 결제일부터 FREE 플랜으로 자동 전환됩니다.')) {
                fetch('/api/subscription/cancel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert('구독 정지가 신청되었습니다.\n다음 결제 예정일 전날까지 UNIVERSE 플랜을 이용하실 수 있습니다.');
                        location.reload();
                    } else {
                        alert('오류: ' + (data.message || '구독 정지에 실패했습니다.'));
                    }
                })
                .catch(err => {
                    alert('서버 오류가 발생했습니다.');
                    console.error(err);
                });
            }
        }

        // 사용자 플랜 로드
        fetch('/api/user/plan')
            .then(res => res.json())
            .then(data => {
                console.log('플랜 정보:', data);
                
                const plan = data.plan || 'free';
                const planLower = plan.toLowerCase();
                
                // plan이 'pro'이고 subscriptionStatus가 'active' 또는 'trial'일 때만 유니버스 플랜 표시
                if (planLower === 'pro' && (data.subscriptionStatus === 'active' || data.subscriptionStatus === 'trial')) {
                    // 유니버스 플랜 표시
                    document.getElementById('freePlanContent').classList.add('hidden');
                    document.getElementById('universePlanContent').classList.remove('hidden');
                    
                    // 구독 시작일
                    if (data.subscriptionStartDate) {
                        const startDate = new Date(data.subscriptionStartDate);
                        document.getElementById('subscriptionStartDate').textContent = 
                            startDate.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' });
                    }
                    
                    // 다음 결제일
                    if (data.nextBillingDate) {
                        const nextDate = new Date(data.nextBillingDate);
                        document.getElementById('nextBillingDate').textContent = 
                            nextDate.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' });
                    } else {
                        // 다음 달 1일로 계산
                        const today = new Date();
                        const nextMonth = new Date(today.getFullYear(), today.getMonth() + 1, 1);
                        document.getElementById('nextBillingDate').textContent = 
                            nextMonth.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' });
                    }
                } else {
                    // 무료 플랜 표시 (plan이 'free'이거나 구독 상태가 active/trial이 아닌 경우)
                    document.getElementById('freePlanContent').classList.remove('hidden');
                    document.getElementById('universePlanContent').classList.add('hidden');
                }
            })
            .catch(err => {
                console.error('플랜 정보 로드 오류:', err);
                // 오류 시 무료 플랜 표시
                document.getElementById('freePlanContent').classList.remove('hidden');
                document.getElementById('universePlanContent').classList.add('hidden');
            });
    </script>
