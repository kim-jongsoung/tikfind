{
  "name": "tikfind-desktop",
  "version": "1.0.7",
  "description": "TikFind Desktop Collector - TikTok Live 데이터 수집 앱 (Background Service)",
  "main": "main-background.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "keywords": [
    "tiktok",
    "live",
    "collector",
    "electron"
  ],
  "author": "TikFind",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "say": "^0.16.0",
    "socket.io-client": "^4.7.2",
    "tiktok-live-connector": "^2.1.1-beta1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tikfind.desktop",
    "productName": "TikFind",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TikFind"
    },
    "publish": {
      "provider": "generic",
      "url": "http://localhost:3001/updates"
    }
  }
}
